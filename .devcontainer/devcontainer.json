{
    "image": "mcr.microsoft.com/devcontainers/python:0-3.10",
    "customizations": {
        "vscode": {
            "extensions": [
                "databricks.databricks",
                "hashicorp.terraform",
                "hediet.vscode-drawio",
                "jeppeandersen.vscode-kafka",
                "ms-azuretools.vscode-azureterraform",
                "ms-azuretools.vscode-docker",
                "ms-mssql.mssql",
                "ms-python.flake8",
                "ms-python.python",
                "RandomFractalsInc.vscode-data-preview",
                "timonwong.shellcheck"
            ]
        },
        "codespaces": {
            "repositories": {
                "devcontainers/features": {
                    "permissions": "write-all"
                }
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/azure-cli:1": {},
        "ghcr.io/devcontainers/features/terraform:1": {},
        "ghcr.io/devcontainers-contrib/features/spark-sdkman:2": {}
    },
    "postCreateCommand": "git config --global --add safe.directory /workspaces/portable-etl && sudo pip3 install build && pip3 install -r src/requirements.txt"
}